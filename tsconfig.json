{
  "compilerOptions": {
    "module": "ESNext",
    "noImplicitAny": false,
    "noEmitOnError": false,
    "removeComments": true,
    "sourceMap": false,
    "target": "es6",
    "jsx": "react-jsx",
    "pretty": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "lib": [
      "ESNext",
      "dom"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
